{
    "name": "ESP32",
    "remoteUser": "esp",
    "updateRemoteUserUID": true,
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "swellaby.rust-pack",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "runArgs": [
        "--privileged",
        "--device=/dev/ttyUSB0:/dev/ttyUSB0"
    ]
}